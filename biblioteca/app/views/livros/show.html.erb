<p id="notice"><%= notice %></p>
<h3 class="muted"><%= @livro.titulo %></h3>
<hr />
<table class="table table-striped table-bordered">
  <tr>
    <th>Categoria</th>
    <th>Autor(es)</th>
    <th>Nº Páginas</th>
    <th>Ano</th>
    <th>ISSN</th>
  </tr>

  <tr>
    <td><%= @livro.categoria.nome %></td>
    <td>
        <ul>
            <% @livro.autores.each do |autor| %>
              <li><%= autor.nome %></li>
            <% end %>
        </ul> 
    </td>
    <td><%= @livro.paginas %></td>
    <td><%= @livro.ano %></td>
    <td><%= @livro.issn %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to 'Edit', edit_livro_path(@livro), :class => "btn btn-primary" %>
  <%= link_to 'Back', livros_path, :class => "btn"  %>
</div>

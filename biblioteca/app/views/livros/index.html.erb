<h1>Listing livros</h1>

<table>
  <tr>
    <th>Categoria</th>
    <th>Titulo</th>
    <th>Paginas</th>
    <th>Ano</th>
    <th>Issn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @livros.each do |livro| %>
  <tr>
    <td><%= livro.categoria %></td>
    <td><%= livro.titulo %></td>
    <td><%= livro.paginas %></td>
    <td><%= livro.ano %></td>
    <td><%= livro.issn %></td>
    <td><%= link_to 'Show', livro %></td>
    <td><%= link_to 'Edit', edit_livro_path(livro) %></td>
    <td><%= link_to 'Destroy', livro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

